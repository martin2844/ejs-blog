<%- include("partials/header") -%>



<section class="jumbotron text-center">
     <div class="container">
       <h1 class="jumbotron-heading">Album example</h1>
       <p class="lead text-muted"><%= tag %></p>
       
     </div>
   </section>






<div class="row">
<% posts.forEach(function(posts) { %>
  <% const url = "/posts/" + posts._id %>
  <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <a href="<%= url %>"><img class="card-img-top" src="<%=posts.imageURL%>" alt="Card image cap"></a>
          <div class="card-body">
            <h1><%=  posts.title %></h1>
            <% if (typeof posts.content == 'undefined' ) { %>
                      <p> no content</p>
                  <% } else { %>
                    <p style="text-align: justify;"><%=  posts.content.substring(0,300) %> ...</p>
           <% } %>


                      <a href="<%= url %>" class="btn btn-outline-secondary btn-sm" role="button" aria-pressed="true">Leer MÃ¡s</a>
                      <a href="<%= url %>" class="btn btn-outline-primary btn-sm" role="button" aria-pressed="true">#<%= posts.tag1 %></a>
                      <a href="<%= url %>" class="btn btn-outline-primary btn-sm" role="button" aria-pressed="true">#<%= posts.tag2 %></a>

         </div>
     </div>
   </div>
          <%});%>


</div>









